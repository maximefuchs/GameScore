<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".NameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:isScrollContainer="true"
        android:layout_gravity="center"
        android:padding="35sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_1"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            android:id="@+id/TV_team1"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/J1"
                android:textColor="#FFF"
                android:padding="20dp"
                android:textSize="30sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:id="@+id/nameP1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/J2"
                android:textColor="#FFF"
                android:padding="20dp"
                android:textSize="30sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:id="@+id/nameP2"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_2"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            android:id="@+id/TV_team2"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/J3"
                android:textColor="#FFF"
                android:padding="20dp"
                android:textSize="30sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:id="@+id/nameP3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/J4"
                android:textColor="#FFF"
                android:padding="20dp"
                android:textSize="30sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:id="@+id/nameP4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llP5"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/J5"
                android:textColor="#FFF"
                android:padding="20dp"
                android:textSize="30sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:id="@+id/nameP5"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/checked"
            android:padding="10sp"
            android:background="@drawable/background_games"
            android:textSize="30sp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:id="@+id/ok_btn"/>

    </LinearLayout>

</ScrollView>